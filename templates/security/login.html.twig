{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" class="form_auth box">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="form_title main-title">Please login</h1>
    <div class="form_widget">
        <input type="email" value="{{ last_username }}" name="email" placeholder="Email" autocomplete="email" required autofocus>
    </div>
    <div class="form_widget">
        <input type="password" name="password" placeholder="Password" autocomplete="current-password" required>
    </div>

    <div class="form_widget">
        <a href="#">Forgot your password?</a>
    </div>


    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn_full btn_primary reg-bold" type="submit">
        Login
    </button>
</form>
{% endblock %}
